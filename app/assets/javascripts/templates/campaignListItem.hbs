<td class="status">
  {{#if published}}
    <span class="label label-green publish-btn">Published</span>
  {{else}}
    <span class="label label-lightblue publish-btn">Not Published</span>
  {{/if}}
</td>
<td class="locked">
  {{#if locked}}
    <span class="label label-yellow lock-btn" data-locked="yes"><i class="icon-lock"></i> Locked</span>
  {{else}}
    <span class="label label-lightblue lock-btn" data-locked="no"><i class="icon-unlock"></i> Unocked</span>
  {{/if}}
</td>
<td class="name"><h2>{{name}}</h2></td>
<td class="buttons">
<div class="btn-group">
  <a class="btn edit-btn large {{#if locked}}disabled{{/if}}" href="#campaign/{{ id }}"><i class="icon-edit"></i> Edit</a>
  <a class="btn stats-btn large" href="#stats/{{ id }}"> <i class="icon-tasks"></i> Stats
  </a>
  <a class="btn-remove btn large {{#if locked}}disabled{{/if}}" href="#">
    <i class="icon-remove"></i>
  </a>

</div>
</td>
